<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.parasg1999.www.news.MainActivity">

    <TextView
        android:id="@+id/source_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="CNN" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="After Trump's top economic advisor resigns, Wall Street prepares for uncertainty: 'Buckle your seat belts'"/>

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="The resignation of President Donald Trump's National Economic Council head Gary Cohn Tuesday sent Wall Street traders rushing to hit the &quot;sell&quot; button as fears" />

    <TextView
        android:id="@+id/datetime_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Feb 4, 2017\n8:45 pm "/>

</LinearLayout>
